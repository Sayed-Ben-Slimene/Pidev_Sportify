{% extends 'admin_panel/index.html.twig' %}

{% block title %}liste des  categories
{% endblock %}


{% block body %}
	<div class="bg-light p-3">
		<h1>List des cat√©gories</h1>
		<a type="button" class="btn btn-warning" href="{{ path('add_category')}}">Ajouter</a>

	</div>

	<div class="row">
		{% for c in category %}
			<div class="col-4 mt-4">


				<div class="border border-dark rounded p-2 clearfix">


					<h1>

						{{ c.label }}


					</h1>


				</div>
				<a type="button" class="btn btn-warning" href="{{ path('update_category',{id: c.id})}}">modifier
				</a>
				<a type="button" class="btn btn-warning" href="{{ path('remove_category',{id: c.id})}}">supprimer</a>


			</div>


		{% endfor %}
	</div>
{% endblock %}
