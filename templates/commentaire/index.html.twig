{% extends 'Admin.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>DateHeur</th>
                <th>User</th>
                <th>NbLike</th>
                <th>NbDislike</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.comment }}</td>
                <td>{{ commentaire.dateHeur ? commentaire.dateHeur|date('Y-m-d : H:i:s') : '' }}</td>
                <td>{{ commentaire.user }}</td>
                <td>{{ commentaire.nbLike }}</td>
                <td>{{ commentaire.nbDislike }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">Create new</a>
{% endblock %}
