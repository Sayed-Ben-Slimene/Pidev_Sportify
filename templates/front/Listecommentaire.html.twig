{% extends 'base.html.twig' %}

{% block title %}blogs comment
{% endblock %}

{% block body %}
    <section class="tg-main-section tg-haslayout">
        <div class="container">
            <div class="tg-section-name">
                <h2>Latest blog / news</h2>
            </div>
            <div class="col-sm-11 col-xs-11 pull-right">
                <div class="row">
                    <div class="tg-blogpost">

                        <div class="row">
                            <div class="col-sm-6 col-xs-8">
                                <article class="tg-post">
                                    <figure class="tg-postimg">
                                        <a href="{{ path('blog', {'id': actualite.id}) }}">
                                            <img style="width:600px;height:400px;"
                                                 src="{{ asset('uploads/' ~ actualite.img) }}" alt="image description">
                                        </a>

                                        <figcaption>
                                            <ul class="tg-postmetadata">
                                                <li>
                                                    <a href="#">
                                                        LE
                                                        {{ actualite.date | date("d") }}</a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        {{ actualite.date | date("m") }}
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">{{ actualite.date | date("Y") }}</a>
                                                </li>
                                            </ul>

                                        </figcaption>
                                    </figure>
                                    <div class="tg-posttitle">
                                        <h3>
                                            <a href="#">{{ actualite.titre }}</a>
                                        </h3>
                                    </div>
                                    <div class="tg-description">
                                        <p>{{ actualite.description }}.</p>
                                    </div>
                                </article>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="tg-section-heading">
        <h2>
            Liste des commentaires de ce blog</h2>
    </div>

    {% for commentaire in commentaires %}


        <div class="tg-section-heading">
            <h3>
                <img style="width:40px;height:40px; border-radius:100" src="{{ asset('asset/images/avatar.jpg') }}"
                     alt="image description">
                {{ commentaire.user }}</h3>
            <a style="size:200px;" class="tg-theme-tag"
               href="#">{{ commentaire.dateHeur ? commentaire.dateHeur|date('Y-m-d : H:i:s') : '' }}</a>
        </div>

        <div class="tg-description">
            <p>{{ commentaire.comment }}.</p>

            <p>
