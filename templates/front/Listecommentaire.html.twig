{% extends 'base.html.twig' %}

{% block title %}commentaire
{% endblock %}

{% block body %}
<section class="tg-main-section tg-haslayout">
	<div class="container">
		<div class="tg-section-name">
			<h2>Latest blog / news</h2>
		</div>
		<div class="col-sm-11 col-xs-11 pull-right">
			<div class="row">
				<div class="tg-blogpost">

					<div class="row">
						<div class="col-sm-6 col-xs-8">
							<article class="tg-post">
								<figure class="tg-postimg">
									<a href="{{ path('app_commentaire_show', {id: actualite.id}) }}">
										<img style="width:600px;height:400px;" src="{{ asset('uploads/' ~ actualite.img) }}" alt="image description">
									</a>

									<figcaption>
										<ul class="tg-postmetadata">
											<li>
												<a href="#">
													LE
													{{ actualite.date | date("d") }}</a>
											</li>
											<li>
												<a href="#">
													{{ actualite.date | date("m") }}
												</a>
											</li>
											<li>
												<a href="#">{{ actualite.date | date("Y") }}</a>
											</li>
										</ul>

									</figcaption>
								</figure>
								<div class="tg-posttitle">
									<h3>
										<a href="#">{{actualite.titre}}</a>
									</h3>
								</div>
								<div class="tg-description">
									<p>{{actualite.description}}.</p>
								</div>
							</article>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="tg-section-heading">
	<h2>
		Liste des commentaires de ce blog</h2>
</div>

{% for commentaire in commentaires %}


	<div class="tg-section-heading">
		<h3>
			<img style="width:40px;height:40px; border-radius:100" src="{{asset('asset/images/avatar.jpg')}}" alt="image description">
			{{commentaire.user}}</h3>
		<a style="size:200px;" class="tg-theme-tag" href="#">{{ commentaire.dateHeur ? commentaire.dateHeur|date('Y-m-d : H:i:s') : '' }}</a>
	</div>

	<div class="tg-description">
		<p>{{ commentaire.comment }}.</p>

		<p>
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-arrow" viewbox="0 0 16 16">
				<path d="M6.707 9h4.364c-.536 1.573 2.028 3.806 4.929-.5-2.9-4.306-5.465-2.073-4.929-.5H6.707L4.854 6.146a.5.5 0 1 0-.708.708L5.293 8h-.586L2.854 6.146a.5.5 0 1 0-.708.708L3.293 8h-.586L.854 6.146a.5.5 0 1 0-.708.708L1.793 8.5.146 10.146a.5.5 0 0 0 .708.708L2.707 9h.586l-1.147 1.146a.5.5 0 0 0 .708.708L4.707 9h.586l-1.147 1.146a.5.5 0 0 0 .708.708L6.707 9Z"/>
			</svg>
			Ce Commentaire avait
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewbox="0 0 16 16">
				<path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
