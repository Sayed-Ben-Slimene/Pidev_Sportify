<div id="main_content">
	<div class="section-body">
		<div class="container-fluid">
			<div class="row clearfix">
				<div class="col-md-12">
					<div class="tab-content">
						<div class="tab-pane active show" id="Company_Settings">
							<div class="card">
								<div class="card-body">
									{{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
									<form>

										<div class="form-group">
											{{ form_label(form.title,"title") }}
											{{ form_widget(form.title,{ 'attr': {'class': 'form-control'} }) }}
											{% if form_errors(form.title) is not empty %}
												<div class="alert alert-danger">
													{{ form_errors(form.title) }}
												</div>
											{% endif %}
										</div>
										<div class="form-group">
											{{ form_label(form.category,"category") }}
											{{ form_widget(form.category,{ 'attr': {'class': 'form-control'} }) }}
											{% if form_errors(form.category) is not empty %}
												<div class="alert alert-danger">
													{{ form_errors(form.category) }}
												</div>
											{% endif %}
										</div>


										<div class="form-group">
											{{ form_label(form.prix,"prix") }}
											{{ form_widget(form.prix,{ 'attr': {'class': 'form-control'} }) }}
											{% if form_errors(form.prix) is not empty %}
												<div class="alert alert-danger">
													{{ form_errors(form.prix) }}
												</div>
											{% endif %}
										</div>

										<div class="form-group">
											{{ form_label(form.description,"description") }}
											{{ form_widget(form.description,{ 'attr': {'class': 'form-control'} }) }}
											{% if form_errors(form.description) is not empty %}
												<div class="alert alert-danger">
													{{ form_errors(form.description) }}
												</div>
											{% endif %}
										</div>


										
										<div class="form-group">
											{{ form_label(form.photo,"photo") }}
											{{ form_widget(form.photo,{ 'attr': {'class': 'form-control'} }) }}
											{% if form_errors(form.photo) is not empty %}
												<div class="alert alert-danger">
													{{ form_errors(form.photo) }}
												</div>
											{% endif %}
										</div>


										<div class="form-group">
											{{ form_label(form.published,"publier") }}
											{{ form_widget(form.published,{ 'attr': {'class': 'form-control'} }) }}
											{% if form_errors(form.published) is not empty %}
												<div class="alert alert-danger">
													{{ form_errors(form.published) }}
												</div>
											{% endif %}
										</div>

										<div class="col-sm-12 text-right m-t-20">

											<input type="submit" class="btn btn-warning " value=" ajouter">
										</div>


										{{ form_end(form) }}
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
